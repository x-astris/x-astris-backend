generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Plan {
  FREE
  PREMIUM
}

enum SubscriptionStatus {
  ACTIVE
  TRIALING
  PAST_DUE
  CANCELED
}

model Subscription {
  id                 String             @id @default(uuid())
  userId             Int                @unique
  provider           String             // "stripe" later
  providerCustomerId String?            @unique
  providerSubId      String?            @unique
  status             SubscriptionStatus @default(CANCELED)
  currentPeriodEnd   DateTime?
  createdAt          DateTime           @default(now())
  updatedAt          DateTime           @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id                  Int                      @id @default(autoincrement())
  email               String                   @unique
  password            String
  name                String?
  createdAt           DateTime                 @default(now())
  verified            Boolean                  @default(false)
  verificationTokens  EmailVerificationToken[]
  passwordResetTokens PasswordResetToken[]
  projects            Project[]
  plan                Plan                     @default(FREE)
  subscription        Subscription?
}

model Project {
  id            String        @id @default(uuid())
  name          String
  userId        Int
  createdAt     DateTime      @default(now())
  description   String?
  startYear     Int
  forecastYears Int           @default(5)
  balYears      BalanceYear[]
  pnlYears      PnlYear[]
  user          User          @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model PnlYear {
  id               Int     @id @default(autoincrement())
  year             Int
  revenue          Float   @default(0)
  cogs             Float   @default(0)
  opex             Float   @default(0)
  depreciation     Float   @default(0)
  interest         Float   @default(0)
  taxes            Float   @default(0)
  projectId        String
  cogsPct          Float?  @default(0)
  opexPct          Float?  @default(0)
  revenueGrowthPct Float?  @default(0)
  taxRatePct       Float?  @default(25)

  project          Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([projectId, year])
}

model BalanceYear {
  id                        Int     @id @default(autoincrement())
  year                      Int
  fixedAssets               Float   @default(0)
  inventory                 Float   @default(0)
  receivables               Float   @default(0)
  cash                      Float   @default(0)
  equity                    Float   @default(0)
  longDebt                  Float   @default(0)
  shortDebt                 Float   @default(0)
  projectId                 String
  otherShortTermAssets      Float   @default(0)
  otherShortTermLiabilities Float   @default(0)
  payables                  Float   @default(0)
  investments               Float   @default(0)
  depreciationPct           Float   @default(10)
  interestRatePct           Float   @default(5)
  ratioDio                  Float?
  ratioDpo                  Float?
  ratioDso                  Float?
  ratioOcaPct               Float?
  ratioOclPct               Float?
  dividend                  Float   @default(0)
  equityContribution        Float   @default(0)

  project                   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([projectId, year])
}

model EmailVerificationToken {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  userId    Int
  expiresAt DateTime
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model PasswordResetToken {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  userId    Int
  expiresAt DateTime
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
